#!/bin/sh

I3_CONFIG_FILE="$HOME/.config/i3/config"
if [ -f "${I3_CONFIG_FILE}" ]; then
    echo "* setting colors for i3 window manager..."
    
    set_value "client\.focused"          " " "${selected_bg_color} ${selected_bg_color} ${selected_fg_color} ${selected_bg_color}" "${I3_CONFIG_FILE}"
    set_value "client\.focused_inactive" " " "${unfocused_color} ${unfocused_color} ${unfocused_text_color} ${selected_bg_color}" "${I3_CONFIG_FILE}"
    set_value "client\.unfocused"        " " "${unfocused_color} ${unfocused_color} ${unfocused_text_color} ${selected_bg_color}" "${I3_CONFIG_FILE}"
    set_value "client\.urgent"           " " "${urgent_color} ${urgent_color} ${selected_fg_color} ${urgent_color}" "${I3_CONFIG_FILE}"
    
    set_value "separator"  " " " ${selected_bg_color}"  "${I3_CONFIG_FILE}"
    set_value "background" " " " ${bg_color}"           "${I3_CONFIG_FILE}"
    set_value "statusline" " " " ${fg_color}"           "${I3_CONFIG_FILE}"
    
    set_value "focused_workspace"  " " "${selected_bg_color} ${selected_bg_color} ${selected_fg_color}" "${I3_CONFIG_FILE}"
    set_value "active_workspace"   " " "${unfocused_color} ${unfocused_color} ${unfocused_text_color}" "${I3_CONFIG_FILE}"
    set_value "inactive_workspace" " " "${bg_color} ${bg_color} ${fg_color}" "${I3_CONFIG_FILE}"
    set_value "urgent_workspace"   " " "${urgent_color} ${urgent_color} ${selected_fg_color}" "${I3_CONFIG_FILE}"
    
    i3-msg reload >/dev/null
    echo "  Done."
fi
