<?xml version="1.0" encoding="UTF-8"?>

<style-scheme id="gcs-theme" _name="GCS theme" version="1.0">
  <author>GCS - Global Color Scheme</author>
  <_description>Theme auto-generated by GCS</_description>

  <!-- Global Settings -->
  <style name="text"                        foreground="" background=""/>
  <style name="selection"                   foreground="" background=""/>
  <style name="cursor"                      foreground=""/>
  <style name="current-line"                background=""/>
  <style name="line-numbers"                foreground="" background=""/>
  <style name="draw-spaces"                 foreground=""/>
  <style name="right-margin"                foreground="" background=""/>
  <style name="background-pattern"          background=""/>

  <!-- Bracket Matching -->
  <style name="bracket-match"               background=""/>
  <style name="bracket-mismatch"            background="" bold="true"/>

  <!-- Search Matching -->
  <style name="search-match"                foreground="" background=""/>

  <!-- Comments -->
  <style name="def:comment"                 foreground="" italic="true"/>
  <style name="def:shebang"                 foreground="" italic="true"/>
  <style name="def:doc-comment-element"     bold="true"/>

  <!-- Constants and Variables-->
  <style name="def:constant"                foreground=""/>
  <style name="def:string"                  foreground=""/>
  <style name="def:special-char"            foreground=""/>
  <style name="def:special-constant"        foreground="" bold="true"/>
  <style name="def:number"                  foreground=""/>
  <style name="def:floating-point"          foreground=""/>
  <style name="def:keyword"                 foreground="" bold="true"/>
  <style name="def:builtin"                 foreground="" bold="true"/>
  <style name="def:variable"                foreground=""/>

  <!-- Identifiers -->
  <style name="def:identifier"              foreground=""/>
  <style name="def:function"                use-style="def:identifier"/>

  <!-- Statements -->
  <style name="def:statement"               foreground=""/>

  <!-- Types -->
  <style name="def:type"                    foreground=""/>

  <!-- Others -->
  <style name="def:error"                   foreground="" background="" bold="true"/>
  <style name="def:warning"                 foreground="" background=""/>
  <style name="def:note"                    foreground="" bold="true"/>
  <style name="def:net-address-in-comment"  foreground="" italic="false" underline="single"/>
  <style name="def:preprocessor"            foreground=""/>

  <!-- Unknown? -->
  <style name="def:specials"                foreground="" background=""/>
  <style name="def:boolean"                 foreground=""/>

  <!-- C Styles -->
  <style name="c:preprocessor"              foreground="" bold="true"/>
  <style name="c:included-file"             foreground=""/>
  <style name="c:common-defines"            foreground="" bold="true"/>

  <!-- Diff Styles -->
  <style name="diff:ignore"                 foreground=""/>
  <style name="diff:added-line"             foreground=""/>
  <style name="diff:removed-line"           foreground=""/>
  <style name="diff:changed-line"           foreground=""/>
  <style name="diff:diff-file"              foreground="" bold="true"/>
  <style name="diff:location"               foreground=""/>
  <style name="diff:special-case"           foreground="" bold="true"/>

  <!-- Ruby Styles -->
  <style name="ruby:module-handler"         foreground=""/>
  <style name="ruby:symbol"                 foreground=""/>
  <style name="ruby:regex"                  foreground=""/>

  <!-- SH Styles -->
  <style name="sh:function"                 foreground=""/>

  <!-- XML Styles -->
  <style name="xml:attribute-name"          foreground=""/>
  <style name="xml:element-name"            foreground=""/>
  <style name="xml:entity"                  foreground="#blue"/>
  <style name="xml:processing-instruction"  bold="true"/>

</style-scheme>
