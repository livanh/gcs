#!/bin/sh
GPICVIEW_CONFIG_FILE="$HOME/.config/gpicview/gpicview.conf"
if [ -f "${GPICVIEW_CONFIG_FILE}" ]; then
    echo "* setting colors for gpicview..."
    set_value "bg"      "=" "${base_color}" "${GPICVIEW_CONFIG_FILE}"
    set_value "bg_full" "=" "${base_color}" "${GPICVIEW_CONFIG_FILE}"
    echo "  Done."
fi
