#!/bin/sh

# TODO: add link colors
: ${cherrytree_window_fg:=$text_color}
: ${cherrytree_window_bg:=$base_color}
: ${cherrytree_tree_fg:=$text_color}
: ${cherrytree_tree_bg:=$base_color}

CHERRYTREE_CONFIG_FILE="$HOME/.config/cherrytree/config.cfg"
if [ -f "${CHERRYTREE_CONFIG_FILE}" ]; then
    printf "* Setting colors for cherrytree..."
    set_value "rt_def_fg"     " = " "${cherrytree_window_fg}"      "${CHERRYTREE_CONFIG_FILE}"
    set_value "rt_def_bg"     " = " "${cherrytree_window_bg}"      "${CHERRYTREE_CONFIG_FILE}"
    set_value "tt_def_fg"     " = " "${cherrytree_tree_fg}"        "${CHERRYTREE_CONFIG_FILE}"
    set_value "tt_def_bg"     " = " "${cherrytree_tree_bg}"        "${CHERRYTREE_CONFIG_FILE}"
    printf " done.\n"
fi
