#!/bin/sh

# TODO: handle profiles
# TODO: set color palette

TERMINATOR_CONFIG_FILE="$HOME/.config/terminator/config"
if [ -f "${TERMINATOR_CONFIG_FILE}" ]; then
    echo "* setting colors for terminator..."
    set_value "background_color" " = " "\"${terminal_bg_color}\"" "${TERMINATOR_CONFIG_FILE}"
    set_value "cursor_color"     " = " "\"${terminal_fg_color}\"" "${TERMINATOR_CONFIG_FILE}"
    set_value "foreground_color" " = " "\"${terminal_fg_color}\"" "${TERMINATOR_CONFIG_FILE}"
    echo "  Done."
fi
